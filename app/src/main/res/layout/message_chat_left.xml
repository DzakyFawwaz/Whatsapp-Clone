<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
    android:padding="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_chat_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/blank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_toEndOf="@id/profile_chat_left"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/chat_bgr_left"
        android:id="@+id/text_chat_left"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Chat Box"/>

    <ImageView
        android:src="@drawable/blank"
        android:layout_toEndOf="@id/profile_chat_left"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/chat_bgr_left"
        android:id="@+id/sent_image_left"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:text="This is Chat Box"/>


    <TextView
        android:visibility="gone"
        android:id="@+id/text_seen_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_chat_left"
        android:layout_alignStart="@+id/text_chat_left"
        android:text="seen" />
</RelativeLayout>