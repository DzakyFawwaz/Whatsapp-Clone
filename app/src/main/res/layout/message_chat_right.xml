<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="end"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:gravity="center_vertical|end"
    android:padding="5dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_chat_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/blank"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_chat_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginEnd="217dp"
            android:layout_toStartOf="@+id/profile_chat_right"
            android:background="@drawable/chat_bgr_right"
            android:elevation="5dp"
            android:padding="10dp"
            android:text="This is Chat Box" />

        <ImageView
            android:src="@drawable/blank"
            android:id="@+id/sent_image_right"
            android:visibility="gone"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:layout_marginEnd="217dp"
            android:layout_toStartOf="@+id/profile_chat_right"
            android:background="@drawable/chat_bgr_right"
            android:elevation="5dp"
            android:padding="10dp"
            />


        <TextView
            android:id="@+id/text_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_chat_right"
            android:layout_alignEnd="@+id/text_chat_right"
            android:text="seen" />


    </RelativeLayout>
</RelativeLayout>